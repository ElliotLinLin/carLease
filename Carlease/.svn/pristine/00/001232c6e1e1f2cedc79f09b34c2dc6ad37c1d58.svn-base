<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E9EA"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titleBar_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎留下您的意见和建议"
            android:textColor="#319FF3"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/car_remote_edit_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_feedback_proposal"
                android:layout_width="fill_parent"
                android:layout_height="180dp"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/feedback_proposal"
                android:textColor="#333333"
                android:textColorHint="#aaaaaa"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_feedback_length"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:background="@drawable/treated"
                android:gravity="center"
                android:text="0/500"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/et_feedback_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/car_remote_edit_bg"
            android:hint="@string/feedback_email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="#333333"
            android:textColorHint="#aaaaaa"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_feedback_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="@string/clear"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_feedback_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_btn_login"
        android:text="@string/submit"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>