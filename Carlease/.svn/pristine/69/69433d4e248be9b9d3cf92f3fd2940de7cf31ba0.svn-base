<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <com.hst.Carlease.widget.MyScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#ffffff"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rv_layout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y450"
                android:visibility="visible" >

                <com.hst.Carlease.widget.gallary.BGABanner
                    android:id="@+id/banner_main_accordion"
                    style="@style/BannerDefaultStyle"
                    app:banner_pointDrawable="@drawable/bga_banner_selector_point_hollow"
                    app:banner_transitionEffect="accordion" >
                </com.hst.Carlease.widget.gallary.BGABanner>
            </RelativeLayout>

            <TextView
                android:id="@+id/carband_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:text="起亚K2.1.4GLAT"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/first_pay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="首付2500"
                android:textColor="@color/red"
                android:textSize="@dimen/x24" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/month_pay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="月供"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x24" />

                <TextView
                    android:id="@+id/btn_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/shape_order_red"
                    android:padding="5dp"
                    android:text="立即预订"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x24" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="@dimen/x10"
                android:background="#F8F8F8" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/y80"
                android:background="#ECEEF0"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="基础信息"
                    android:textSize="@dimen/x28" />

              
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x20"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/melige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.28万公里"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="油箱容积"
                        android:textColor="#7F8080"
                        android:textSize="@dimen/x26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/line_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-1"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上架时间"
                        android:textColor="#7F8080"
                        android:textSize="@dimen/x26" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/pailiang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.4/欧V"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="排量"
                        android:textColor="#7F8080"
                        android:textSize="@dimen/x26" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:text="【车型】"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/car_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="排量/排放"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:text="【变速箱】"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/bags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="排量/排放"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:text="【综合油耗】"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/oil_con"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="排量/排放"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:text="【最高车速】"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/big_speed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="排量/排放"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/x10" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_weight="1.3"
                    android:gravity="left"
                    android:text="【乘客人数】"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/passener"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="排量/排放"
                    android:textColor="#7F8080"
                    android:textSize="@dimen/x26" />
            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#F8F8F8" />
        </LinearLayout>
    </com.hst.Carlease.widget.MyScrollView>

</LinearLayout>