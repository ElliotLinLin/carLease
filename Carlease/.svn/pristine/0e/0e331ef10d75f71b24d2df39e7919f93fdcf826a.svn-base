<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ydd.fragmentdemo.MainActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/titlebar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <FrameLayout
                android:id="@+id/frame_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/y10"
                android:background="#dedede" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/liner1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image_index"
                        android:layout_width="@dimen/x43"
                        android:layout_height="@dimen/y35"
                        android:background="@drawable/index_click" />

                    <TextView
                        android:id="@+id/tv_weixin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="首页"
                        android:textColor="#56B0F4"
                        android:layout_marginTop="@dimen/x20" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image_car"
                        android:layout_width="@dimen/x66"
                        android:layout_height="@dimen/x35"
                        android:background="@drawable/car"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_tongxunlu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="热门车型"
                         android:layout_marginTop="@dimen/x20" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image_car4"
                        android:layout_width="@dimen/x49"
                        android:layout_height="@dimen/x35"
                        android:background="@drawable/car_2"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_tongxunlu4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="二手车"
                         android:layout_marginTop="@dimen/x20" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/liner3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/image_user"
                        android:layout_width="@dimen/x42"
                        android:layout_height="@dimen/x36"
                        android:background="@drawable/user"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:id="@+id/tv_faxian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="我的" 
                         android:layout_marginTop="@dimen/x20"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>