<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#50000000"
    android:gravity="bottom"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="center" >

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:layout_width="0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#ffffff" />

            <Button
                android:id="@+id/okBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:padding="10dp"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:id="@+id/mWheelView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="#5fff"
            android:gravity="center" >

            <com.hst.Carlease.util.datetimeUtils.AbWheelView
                android:id="@+id/wheelView1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff" />

            <com.hst.Carlease.util.datetimeUtils.AbWheelView
                android:id="@+id/wheelView2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff" />

            <com.hst.Carlease.util.datetimeUtils.AbWheelView
                android:id="@+id/wheelView3"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff" />

            <com.hst.Carlease.util.datetimeUtils.AbWheelView
                android:id="@+id/wheelView4"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:visibility="gone" />

            <com.hst.Carlease.util.datetimeUtils.AbWheelView
                android:id="@+id/wheelView5"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:visibility="gone" />

            <com.hst.Carlease.util.datetimeUtils.AbWheelView
                android:id="@+id/wheelView6"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>