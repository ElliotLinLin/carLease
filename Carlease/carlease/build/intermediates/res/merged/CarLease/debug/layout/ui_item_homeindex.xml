<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F1F6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y540"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_adver"
                android:layout_width="@dimen/x300"
                android:layout_height="@dimen/x240"
                android:layout_margin="@dimen/x20"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/y79"
                android:background="@drawable/hot_buy" />
        </FrameLayout>

        <TextView
            android:id="@+id/model_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:text="首付一半FSDHAFJKAJFHAFAJDAFAUISDFJAHAFDAFGDHAGFAH"
            android:textColor="#444444"
            android:lines="2"
            android:textSize="@dimen/x26"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/first_pay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:text="首付一"
            android:textColor="#747474"
            android:textSize="@dimen/x24"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/month_pay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x20"
            android:text="fsdasda"
            android:textColor="#747474"
            android:textSize="@dimen/x24"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical" >

            <View style="@style/me_line" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="查看详情"
                android:textColor="#478DFD"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>