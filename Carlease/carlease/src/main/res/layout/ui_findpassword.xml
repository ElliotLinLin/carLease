<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:textColor="#E0E0E0" />

    <LinearLayout style="@style/register_bg" >

        <ImageView
            style="@style/registerimage"
            android:background="@drawable/shou" />

        <TextView
            style="@style/textregister"
            android:text="手机号" />

        <TextView
            style="@style/txvertical_line"
       />

        <EditText
            android:id="@+id/phone"
            style="@style/login_edit"
            android:hint="@string/accounts_hint"
            android:inputType="phone" />
    </LinearLayout>

    <View style="@style/me_line" />

    <LinearLayout style="@style/verification_style" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/y20"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y20" >

            <ImageView
                style="@style/registerimage"
                android:background="@drawable/yan" />

            <TextView
                style="@style/textregister"
                android:text="验证码" />

            <TextView
                style="@style/vertical_line"
                 />

            <EditText
                android:id="@+id/code"
                style="@style/login_edit"
                android:hint="@string/identifying_code_hint"
                android:inputType="number"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_getcode"
            style="@style/gettextCode" />
    </LinearLayout>

    <View style="@style/me_line" />

    <LinearLayout style="@style/register_bg" >

        <ImageView
            style="@style/registerimage"
            android:background="@drawable/mi" />

        <TextView
            style="@style/textregister"
            android:text="重    设" />

        <TextView
            style="@style/txvertical_line"
             />

        <EditText
            android:id="@+id/pass"
            style="@style/login_edit"
            android:hint="@string/pwd_hint"
            android:inputType="textPassword" />
    </LinearLayout>

    <View style="@style/me_line" />

    <LinearLayout style="@style/register_bg" >

        <ImageView
            style="@style/registerimage"
            android:background="@drawable/mi" />

        <TextView
            style="@style/textregister"
            android:text="确    认" />

        <TextView
            style="@style/txvertical_line"
            />

        <EditText
            android:id="@+id/pass_sure"
            style="@style/login_edit"
            android:hint="@string/sure_hint"
            android:inputType="textPassword" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y90"
        android:background="@drawable/btn_login_selecter"
        android:gravity="center"
        android:padding="@dimen/x20"
        android:text="@string/save"
        android:textColor="@color/white" />

</LinearLayout>