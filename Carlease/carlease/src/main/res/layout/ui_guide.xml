<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/titleBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_guide"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
        </android.support.v4.view.ViewPager>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_guide_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
			<!-- 汇租车，引导页，立即体验按钮 -->
            <Button
                android:id="@+id/btn_guide_in"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/guide_experience"
                android:gravity="center"
                
                android:textColor="@color/white"
                
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_guide_pass"
                android:layout_width="80dip"
                android:layout_height="wrap_content"
                android:background="@drawable/guide_experience"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_point_guide"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center" >
			<!-- 引导页由10张变为五张 -->
            <ImageView
                android:id="@+id/image_guide_point1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/guide_point1" />

            <ImageView
                android:id="@+id/image_guide_point2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/guide_point2" />

            <ImageView
                android:id="@+id/image_guide_point3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/guide_point2" />

            <ImageView
                android:id="@+id/image_guide_point4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/guide_point2" />

           
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>